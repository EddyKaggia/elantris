{
	"name": "auth",
	"version": "1.0.0",
	"description": "Authentication microservice for Elantris social media app",
	"main": "index.ts",
	"scripts": {
		"lint": "eslint src/**/*.ts",
		"prettier": "prettier --check ./src/**/*.ts",
		"prettier:fix": "prettier --write ./src/**/*.ts",
		"start:dev": "nodemon src/index.ts",
		"start": "echo starting prod server",
		"test": "jest"
	},
	"jest": {
		"testEnvironment": "node",
		"preset": "ts-jest"
	},
	"keywords": [],
	"author": "Eddy Kaggia",
	"license": "ISC",
	"dependencies": {
		"express": "^4.18.2",
		"nodemon": "^3.0.1",
		"pretty-quick": "^3.1.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"devDependencies": {
		"@types/express": "^4.17.20",
		"@types/jest": "^29.5.7",
		"@types/node": "^20.8.10",
		"@types/supertest": "^2.0.15",
		"eslint": "^8.52.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-airbnb-typescript-prettier": "4.1.0",
		"eslint-plugin-import": "^2.29.0",
		"husky": "^8.0.3",
		"jest": "^29.7.0",
		"lint-staged": "^15.0.2",
		"prettier": "^3.0.3",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npx run prettier:fix",
			"npx run lint",
			"git add"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
